# Last Oasis Data Extractor Configuration

# ===== PAK FILES CONFIGURATION =====
# Main game installation directory
GAME_PATH=C:\Program Files (x86)\Steam\steamapps\common\Last Oasis

# Relative path to PAK files within game directory
PAK_DIRECTORY=Mist\Content\Paks

# Output directory for extracted files
OUTPUT_DIRECTORY=./temp/extracted

# Target directories to extract (comma-separated, empty = extract all)
TARGET_DIRECTORIES=Content/Mist/Data/,Content/Localization/Game

# ===== ENCRYPTION CONFIGURATION =====
# Whether PAK files are encrypted
IS_ENCRYPTED=true

# AES encryption key (256-bit hex string)
AES_KEY=0xFED592820455B2B9A8CA3E85DD8CD37BB3BAC9D44116D4D32A6ED77CA75452D0

# ===== TOOLS CONFIGURATION =====
# Path to UnrealPak.exe
UNREAL_PAK_PATH=./tools/UnrealPakTool/UnrealPak.exe

# Path to FModel.exe
FMODEL_PATH=./tools/FModel.exe

# ===== EXTRACTION SETTINGS =====
# Clean temporary files on start
CLEAN_TEMP_ON_START=true

# Clean temporary files on finish
CLEAN_TEMP_ON_FINISH=false

# Validate extracted files
VALIDATE_EXTRACTED_FILES=true

# Number of retry attempts
RETRY_ATTEMPTS=3

# Timeout in minutes
TIMEOUT_MINUTES=30

# ===== LOGGING CONFIGURATION =====
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/extraction.log

# ===== LEGACY CONFIGURATION =====
# Content folder path for data extraction (legacy)
CONTENT_FOLDER_PATH=

# Steam API Configuration (for update monitoring)
STEAM_API_KEY=